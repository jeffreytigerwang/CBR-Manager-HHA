<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cbrGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ClientPageCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="QuestionsPageCardView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerSizeTopLeft">40dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="RoundImageView" parent="">
        <item name="cornerFamily">rounded</item>
    </style>

</resources>