<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".fragments.newvisit.VisitFirstQuestionSetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/newVisit_Q1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/purpose_of_visit"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/newVisit_purposeRadioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.028"
            android:layout_marginLeft="8dp" />

        <RadioGroup
            android:id="@+id/newVisit_purposeRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.045"
            android:layout_marginLeft="16dp">

            <RadioButton
                android:id="@+id/newVisit_CBRRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cbr" />

            <RadioButton
                android:id="@+id/newVisit_DCRradioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disability_centre_referral" />

            <RadioButton
                android:id="@+id/newVisit_DCRFURadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/disability_centre_referral_follow_up" />

        </RadioGroup>

        <TextView
            android:id="@+id/newVisit_Q2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:text="@string/new_visit_question_2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newVisit_purposeRadioGroup"
            android:layout_marginLeft="8dp" />

        <CheckBox
            android:id="@+id/newVisit_healthCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#000000"
            android:text="@string/health"
            android:layout_marginLeft="16dp" />

        <CheckBox
            android:id="@+id/newVisit_educationCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#000000"
            android:text="@string/education"
            android:layout_marginLeft="16dp" />

        <CheckBox
            android:id="@+id/newVisit_socialCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#000000"
            android:text="@string/social"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/newVisit_Q3textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/date_of_visit"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/newVisit_dateEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="18"
            android:inputType="date"
            android:hint="@string/yyyy_mm_dd"
            android:importantForAutofill="no"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/newVisit_Q4TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/name_of_cbr_worker"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="8dp" />

        <EditText
            android:id="@+id/newVisit_workerNameEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="18"
            android:inputType="textPersonName"
            android:hint="@string/first_and_last_name"
            android:importantForAutofill="no"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/newVisit_Q5TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/location_of_visit"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/newVisit_locationOfVisitEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="18"
            android:hint="@string/gps_location"
            android:importantForAutofill="no"
            android:inputType="text"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/newVisit_Q6TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/new_vist_location"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>

        <Spinner
            android:id="@+id/newVisit_locationSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/newVisit_Q7TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/village_no"
            android:textColor="#000000"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/newVisit_villageNumberEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="4"
            android:hint="@string/e_g_5"
            android:inputType="number"
            android:importantForAutofill="no"
            android:layout_marginLeft="16dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>