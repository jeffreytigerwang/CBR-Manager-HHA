<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VisitFourthQuestionSetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQ14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="For social what was provided?*:"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkBoxSocialAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Advice" />

        <EditText
            android:id="@+id/editTextSocialAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxSocialAdvocacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Advocacy" />

        <EditText
            android:id="@+id/editTextSocialAdvocacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxSocialRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Referral to other org." />

        <EditText
            android:id="@+id/editTextSocialRef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxSocialEncouragement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Wheelchair repairs" />

        <EditText
            android:id="@+id/editTextSocialEncouragement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewQ15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Goal met?*:"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioGroupSocialGoalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <RadioButton
                android:id="@+id/radioButtonSocialCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled" />

            <RadioButton
                android:id="@+id/radioButtonSocialOngoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing" />

            <RadioButton
                android:id="@+id/radioButtonSocialConcluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concluded" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewQ16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="If concluded, what was the outcome:"
            android:textColor="#000000"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editTextSocialOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLength="100"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:visibility="gone" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>