<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/discussion_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/discussion_message"
                android:layout_width="245dp"
                android:layout_height="93dp"
                android:layout_marginBottom="1dp"
                android:text="message"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/discussion_imageView"
                app:layout_constraintTop_toBottomOf="@+id/discussion_lastName" />

            <TextView
                android:id="@+id/discussion_lastName"
                android:layout_width="104dp"
                android:layout_height="34dp"
                android:text="lastName"
                app:layout_constraintStart_toEndOf="@+id/discussion_fistName"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/discussion_fistName"
                android:layout_width="104dp"
                android:layout_height="34dp"
                android:text="firstName"
                app:layout_constraintStart_toEndOf="@+id/discussion_imageView"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>