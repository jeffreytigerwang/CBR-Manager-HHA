<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VisitSecondQuestionSetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQ8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="For health what was provided?*:"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/checkBoxHealthWheelchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Wheelchair" />

        <EditText
            android:id="@+id/editTextHealthWheelchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthProsthetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Prosthetic" />

        <EditText
            android:id="@+id/editTextHealthProsthetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthOrthotic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Orthotic" />

        <EditText
            android:id="@+id/editTextHealthOrthotic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthWR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Wheelchair repairs" />

        <EditText
            android:id="@+id/editTextHealthWR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthReferralToHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Referral to health centre" />

        <EditText
            android:id="@+id/editTextHealthReferralToHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Advice" />

        <EditText
            android:id="@+id/editTextHealthAdvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthAdvocacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Advocacy" />

        <EditText
            android:id="@+id/editTextHealthAdvocacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/checkBoxHealthEncouragement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Encouragement" />

        <EditText
            android:id="@+id/editTextHealthEncouragement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:maxLength="100"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewQ9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Goal met?*:"
            android:textColor="#000000" />

        <RadioGroup
            android:id="@+id/radioGroupHealthGoalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <RadioButton
                android:id="@+id/radioButtonHealthCancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelled" />

            <RadioButton
                android:id="@+id/radioButtonHealthOngoing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing" />

            <RadioButton
                android:id="@+id/radioButtonHealthConcluded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concluded" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewQ10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="If concluded, what was the outcome:"
            android:textColor="#000000"
            android:visibility="gone" />

        <EditText
            android:id="@+id/editTextHealthOutcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLength="100"
            android:ems="10"
            android:hint="Description* (Max 100 characters)"
            android:visibility="gone" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>